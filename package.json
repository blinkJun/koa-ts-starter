{
  "name": "server-hawk",
  "version": "1.0.0",
  "description": "a server tpl by typescript,koa2",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "dev": "cross-env NODE_ENV=dev nodemon ./src/index.ts",
    "build": "tsc",
    "prod": "cross-env NODE_ENV=production pm2 start ./dist/index.js --name hawk-server",
    "lint": "eslint ./src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkJun/server-base.git"
  },
  "keywords": [
    "koa2",
    "typescript",
    "admin"
  ],
  "author": "liangjun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blinkJun/server-base/issues"
  },
  "homepage": "https://github.com/blinkJun/server-base#readme",
  "dependencies": {
    "@koa/router": "^10.0.0",
    "async-validator": "^3.5.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.9.0",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.0",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.5.0",
    "sha1": "^1.1.1",
    "svg-captcha": "^1.4.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.4",
    "@types/sha1": "^1.1.2",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "windows"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "@typescript-eslint/no-explicit-any": [
        "off"
      ]
    }
  },
  "nodemonConfig ": {
    "verbose": true,
    "ext": "js json ts",
    "ignore": [
      "*.test.js",
      "fixtures/*"
    ],
    "execMap": {
      "rb": "ruby",
      "pde": "processing --sketch={{pwd}} --run"
    },
    "watch": [
      "./src/*"
    ]
  }
}
